<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dfdede"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="职位信息"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textSize="@dimen/title_text_size"
            android:background="@color/bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="职位名称:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="10"
            android:id="@+id/fj_name"
            android:paddingBottom="4dp"
            android:hint="请输入职位名称"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="薪资:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="10"
            android:id="@+id/fj_wage"
            android:paddingBottom="4dp"
            android:hint="请输入薪资"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:paddingBottom="2dp"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="职位类别:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="10"
            android:id="@+id/fj_jobtype"
            android:paddingBottom="4dp"
            android:hint="请输入职位类别"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="联系电话："
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="11"
            android:id="@+id/fj_tel"
            android:paddingBottom="4dp"
            android:hint="请输入联系电话"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="工作地点:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="50"
            android:inputType="text"
            android:maxLines="2"
            android:id="@+id/fj_address"
            android:paddingBottom="4dp"
            android:hint="请输入岗位地址"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="公司名称:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="50"
            android:id="@+id/fj_firm"
            android:paddingBottom="4dp"
            android:hint="请输入公司名称"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="岗位描述:"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:maxLength="200"
            android:inputType="text"
            android:maxLines="5"
            android:id="@+id/fj_discribe"
            android:paddingBottom="4dp"
            android:hint="请输入岗位描述"
            android:textSize="16sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        >

        <Button
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:id="@+id/fj_certify"
            android:layout_alignParentBottom="true"
            android:text="确认修改"
            android:textColor="@color/white"
            android:background="@color/bg"
            />

        <Button
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:id="@+id/fj_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:background="@color/bg1"
            android:layout_marginLeft="186dp"
            android:layout_alignLeft="@+id/fj_certify"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>