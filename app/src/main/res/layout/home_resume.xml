        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:id="@+id/resum_list"-->
        <!--&gt;</ListView>-->
</LinearLayout>