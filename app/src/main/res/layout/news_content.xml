<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="公告详情"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="@dimen/title_text_size"
                android:background="@color/bg"
                />
            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="德国柏林自由大学教授讲座预告"
                android:padding="10dp"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:textStyle="bold" />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingTop="3dp"
              >
              <ImageView
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:src="@drawable/time"
                  />
              <TextView
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="发布时间:"
                  android:textColor="@color/textbg"
                  android:layout_marginLeft="26dp"
                  android:paddingTop="2dp"
                  android:textSize="14sp"
                  />
              <TextView
                  android:id="@+id/tv_news_time"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:paddingLeft="68dp"
                  android:paddingBottom="3dp"
                  android:layout_marginLeft="28dp"
                  android:paddingTop="2dp"
                  android:text="2017-12-12"
                  android:textColor="@color/textbg"
                  android:textSize="14sp" />
                  />
          </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/release"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="发布人:"
                    android:textColor="@color/textbg"
                    android:layout_marginLeft="26dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_news_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="68dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="14dp"
                    android:paddingTop="2dp"
                    android:text="Mess"
                    android:textColor="@color/textbg"
                    android:textSize="14sp" />
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/atype"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="活动类型："
                    android:textColor="@color/textbg"
                    android:layout_marginLeft="26dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_news_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="68dp"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:text="学术型"
                    android:textColor="#FF8C00"
                    android:textSize="14sp" />
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/address"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="活动地点："
                    android:textColor="@color/textbg"
                    android:layout_marginLeft="26dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_news_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="68dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="2dp"
                    android:text="科技会议室1-111"
                    android:textColor="@color/textbg"
                    android:textSize="14sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/atime"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="活动时间："
                    android:textColor="@color/textbg"
                    android:layout_marginLeft="26dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_news_addtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="68dp"
                    android:paddingBottom="3dp"
                    android:text="5月30日下午2点"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/textbg"
                    android:textSize="14sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/activity"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="专业要求："
                    android:layout_marginLeft="26dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/textbg"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
                <TextView
                    android:id="@+id/r_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:text="Lifestyle and lifestyle industries in globalization
全球化背景下的生活方式和生活方式产业"
                    android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>