<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/t"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="职位详情"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="14dp"
        android:textSize="@dimen/title_text_size"
        android:background="@color/bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/job_name"
                android:text="职位名称"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/job_wage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[ 3K-6K ]"
                android:textColor="@color/red"
                />
        </LinearLayout>
        <TextView
            android:layout_width="360dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/job_time1"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:text="发布时间"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位类别:"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:id="@+id/job_type"
            android:textColor="#000000"
            android:text="开发"
            android:paddingLeft="10dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:weightSum="1">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:src="@drawable/firm"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称："
            android:textColor="#000000"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:id="@+id/textView2" />

        <TextView
            android:clickable="true"
            android:layout_width="240dp"
            android:layout_height="28dp"
            android:id="@+id/job_firm"
            android:textColor="#000000"
            android:maxLength="100"
            android:text="成都市荣基苑智能控制设备有限公司"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/back1"
            android:layout_marginLeft="6dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:src="@drawable/notes"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="岗位描述:"
            android:textSize="16sp"
            android:paddingTop="2dp"
            android:paddingLeft="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:id="@+id/job_describe"
            android:text="1.java   2.Python"
            android:maxLines="5"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="14dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="联系电话:"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:paddingTop="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/job_tel"
            android:textColor="#000000"
            android:text="123456489789"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:background="@color/white"
        android:weightSum="1">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:src="@drawable/location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="工作地点:"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:paddingTop="4dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/job_address"
                android:textColor="#000000"
                android:text="成都高新区"
                android:paddingLeft="14dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom= "true"
            android:id="@+id/job_contant"
            android:paddingTop="2dp"
            android:text="联系企业 "
            android:textColor="@color/white"
            android:background="@color/bg"
            />
    </RelativeLayout>

</LinearLayout>