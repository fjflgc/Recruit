<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/f_content"
        android:layout_weight="1"
        >
    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/f_footer"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@drawable/main_color_selector"
            android:drawableTop="@drawable/firm1"
            android:button="@null"
            android:padding="@dimen/little_space"
            android:layout_weight="1"
            android:text="人 才"
            android:id="@+id/f_home"
            android:textSize="16dp"
            android:gravity="center"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:paddingLeft="0dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@drawable/main_color_selector"
           android:drawableTop="@drawable/firm2"
            android:button="@null"
            android:padding="@dimen/little_space"
            android:layout_weight="1"
            android:text="招 聘"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:gravity="center"
            android:id="@+id/f_resum"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@drawable/main_color_selector"
            android:drawableTop="@drawable/my_select"
            android:drawablePadding="@dimen/little_space"
            android:button="@null"
            android:padding="@dimen/little_space"
            android:layout_weight="1"
            android:text="我 的"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:gravity="center"
            android:id="@+id/f_my"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            />

    </RadioGroup>

</LinearLayout>