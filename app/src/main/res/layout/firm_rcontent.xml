<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:text="简历详情"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="14dp"
        android:textSize="@dimen/title_text_size"
        android:background="@color/bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_name"
            android:text="张三"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="年龄:"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_age"
            android:text="22"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就读学校："
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_school"
            android:textColor="#000000"
            android:text="四川理工学院"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="就读专业:"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_majority"
            android:textColor="#000000"
            android:text="计算机软件工程"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="联系电话:"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_tel"
            android:text="1234567897"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="求职岗位:"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_job"
            android:text="前端开发"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="工作经历:"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_ex"
            android:text="请添加工作经验"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textColor="#000000"
            android:text="个人简介:"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_describe"
            android:text="1.java   2.Python"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </LinearLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <Button
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/f_certify"
         android:text="联系Ta"
         android:layout_alignParentBottom= "true"
         android:textColor="@color/white"
         android:background="@color/bg"
         />
 </RelativeLayout>
</LinearLayout>